<h2>Patient: <%= @patient.name %></h2>

Appointments:

    <% @patient.appointments.each do |a| %>
        <% @patient_doctor = @patient.doctors.find(a.doctor_id) %><br>
        <%= link_to @patient_doctor.name, doctor_path(@patient_doctor) %> <br>
        <%= link_to a.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(a) %> 
    <% end %>